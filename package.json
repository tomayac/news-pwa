{
  "name": "news-pwa",
  "version": "1.0.0",
  "description": "News Progressive Web App",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "lint": "npx eslint './**/*.js' --ignore-pattern '/node_modules/' --ignore-pattern 'bundle.js' --fix && npx eslint public/js/**.mjs && npx stylelint ./public/css/**.css",
    "build": "npx babel --presets @babel/preset-env,minify public/js/main.mjs --out-file public/js/bundle.js"
  },
  "keywords": [
    "news",
    "pwa"
  ],
  "author": "Thomas Steiner <steiner.thomas@gmail.com> (http://blog.tomayac.com/)",
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "full-icu": "^1.2.1",
    "helmet": "^3.15.0",
    "intl": "^1.2.5",
    "jsdom": "^13.1.0",
    "jsonpath": "^1.0.0",
    "moment": "^2.23.0",
    "pug": "^2.0.3",
    "reading-time": "^1.1.3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "spdy": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-preset-minify": "^0.5.0",
    "eslint": "^5.12.0",
    "eslint-config-google": "^0.11.0",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8
    },
    "extends": [
      "google"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "serviceworker": true,
      "node": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "initial-letter"
          ]
        }
      ]
    }
  }
}
