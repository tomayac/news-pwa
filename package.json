{
  "name": "news-pwa",
  "version": "1.0.0",
  "description": "News Progressive Web App",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "lint": "npx eslint './**/*.js' --ignore-pattern '/node_modules/' --ignore-pattern 'public/js/' --fix && npx eslint src/js/**.js && npx stylelint ./src/css/**.css",
    "build:js": "npx webpack && babel --presets minify --out-dir public/js src/js/*.js",
    "build:img": "npx imagemin public/img/*.{webp,png,svg,jpg,jpeg} --out-dir public/img",
    "build:css": "npx postcss \"src/css/**.css\" --use cssnano --dir public/css",
    "build": "npm run build:js && npm run build:css npm run build:img"
  },
  "keywords": [
    "news",
    "pwa"
  ],
  "author": "Thomas Steiner <steiner.thomas@gmail.com> (http://blog.tomayac.com/)",
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "full-icu": "^1.2.1",
    "helmet": "^3.15.0",
    "intl": "^1.2.5",
    "jsdom": "^16.1.0",
    "jsonpath": "^1.0.0",
    "moment": "^2.23.0",
    "pug": "^2.0.3",
    "reading-time": "^1.1.3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "spdy": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-loader": "^8.0.5",
    "babel-preset-minify": "^0.5.0",
    "cssnano": "^4.1.8",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "imagemin-cli": "^5.1.0",
    "postcss-cli": "^7.1.0",
    "postcss-loader": "^3.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^19.0.0",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "extends": [
      "google"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "serviceworker": true,
      "node": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "initial-letter"
          ]
        }
      ]
    }
  }
}
